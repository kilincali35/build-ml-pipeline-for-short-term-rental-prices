name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the input_artifact
        type: string

      output_artifact:
        description: name of the output_artifact
        type: string

      output_type:
        description: Type of the output_artifact
        type: string

      output_description:
        description: Description for the output_artifact
        type: string

      min_price:
        description: Min_price value for price
        type: float

      max_price:
        description: Max_price value for price
        type: float

      min_longitude:
        description: Min value for longitude
        type: float

      max_longitude:
        description: Max value for longitude
        type: float

      min_latitude:
        description: Min value for latitude
        type: float

      max_latitude:
        description: Max value for latitude
        type: float

    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price}  --min_longitude {min_longitude} --max_longitude {max_longitude} --min_latitude {min_latitude} --max_latitude {max_latitude} 
